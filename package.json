    "@semantic-release/npm": "7.0.2",
    "@semantic-release/release-notes-generator": "9.0.0",
    "@testing-library/jest-native": "^3.1.0",
    "@testing-library/react-native": "^5.0.3",
    "@types/jest": "^25.1.4",
    "@types/react-native": "^0.61.21",
