    "ts-loader": "6.2.1",
    "typescript": "3.8.3"
  },
  "peerDependencies": {
    "rxjs": ">= 6.5.0",
    "react": ">= 16.9.0",
    "react-native": ">= 0.61.0",
    "@roborox/rxjs-react": ">= 1.1.2"
